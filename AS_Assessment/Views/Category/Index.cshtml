@model IEnumerable<AS_Assessment.DTOs.CategoryResponseDTO>
@{
    ViewBag.Title = "Categories";
}

<h2>Categories</h2>

@if (User.IsInRole("Admin"))
{
    <a asp-action="Add" class="btn btn-success mb-3">Add New Category</a>

}

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            @if (User.IsInRole("Admin"))
            {
                <th style="width:150px;">Actions</th>
            }

        </tr>
    </thead>
    <tbody>
        @foreach (var category in Model)
        {
            <tr>
                <td>@category.Name</td>
                <td>
                    @if (User.IsInRole("Admin"))
                    {
                        <a asp-action="Edit" asp-route-id="@category.Id" class="btn btn-warning btn-sm">Edit</a>
                        <form asp-action="Delete" asp-route-id="@category.Id" method="post" class="d-inline">
                            <button type="submit" class="btn btn-danger btn-sm"
                                    onclick="return confirm('Are you sure you want to delete this category?');">
                                Delete
                            </button>
                        </form>
                    }

                </td>
            </tr>
        }
    </tbody>
</table>