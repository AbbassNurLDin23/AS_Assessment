@model AS_Assessment.DTOs.InventoryItemReadDto

<h2>Inventory Item Details</h2>

<div>
    <dl class="row">
        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.Name</dd>

        <dt class="col-sm-2">Quantity</dt>
        <dd class="col-sm-10">@Model.Quantity</dd>

        <dt class="col-sm-2">Stock Status</dt>
        <dd class="col-sm-10">@Model.StockStatus</dd>

        <dt class="col-sm-2">What Needed</dt>
        <dd class="col-sm-10">@Model.WhatNeeded</dd>

        <dt class="col-sm-2">Category</dt>
        <dd class="col-sm-10">@Model.CategoryName</dd>

        <dt class="col-sm-2">User ID</dt>
        <dd class="col-sm-10">@Model.UserId</dd>
    </dl>
</div>

<a asp-action="Index" class="btn btn-secondary">Back to List</a>
